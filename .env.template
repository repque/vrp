# VRP Trading System Configuration Template
# Copy this file to .env and fill in your values

# Data Sources
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
QUANDL_API_KEY=your_quandl_api_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/vrp_trading
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_TTL_SECONDS=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/vrp_trading/application.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Monitoring and Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_ALERT_RECIPIENTS=trader1@example.com,trader2@example.com

# Model Parameters (Optional - can use defaults)
MIN_CONFIDENCE_THRESHOLD=0.6
MIN_SIGNAL_STRENGTH=0.7
ROLLING_WINDOW_DAYS=60
LAPLACE_SMOOTHING_ALPHA=0.01

# Risk Management
MAX_POSITION_SIZE=0.25
MAX_DRAWDOWN_LIMIT=0.15
POSITION_SIZING_METHOD=FIXED_FRACTION

# Performance Targets
TARGET_SHARPE_RATIO=0.8
TARGET_PROFIT_FACTOR=1.3
TARGET_EXTREME_STATE_PRECISION=0.6

# Trading Environment
TRADING_MODE=PAPER  # PAPER or LIVE
BROKER_API_KEY=your_broker_api_key
BROKER_SECRET_KEY=your_broker_secret_key
BROKER_BASE_URL=https://paper-api.alpaca.markets

# System Settings
TIMEZONE=America/New_York
MARKET_DATA_DELAY_MINUTES=15
HEARTBEAT_INTERVAL_SECONDS=300
MAX_RETRY_ATTEMPTS=3
CIRCUIT_BREAKER_THRESHOLD=5