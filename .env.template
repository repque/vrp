# VRP Trading System Configuration Template
# Copy this file to .env and customize for your environment
# Uses nested configuration with double underscore delimiter

# Environment Settings
ENVIRONMENT=development  # development, production, testing
DEBUG=false

# Model Configuration (VRP__)
VRP_MODEL__VRP_THRESHOLDS=[0.9,1.1,1.3,1.5]  # VRP state boundary thresholds
VRP_MODEL__TRANSITION_WINDOW_DAYS=60  # Rolling window for transition matrix
VRP_MODEL__REALIZED_VOL_WINDOW_DAYS=30  # Volatility calculation window
VRP_MODEL__LAPLACE_SMOOTHING_ALPHA=1.0  # Smoothing parameter for sparse data
VRP_MODEL__MIN_CONFIDENCE_FOR_SIGNAL=0.6  # Minimum confidence threshold
VRP_MODEL__VOLATILITY_ANNUALIZATION_FACTOR=252.0  # Trading days per year
VRP_MODEL__VRP_MIN_REASONABLE=0.1  # Minimum reasonable VRP ratio
VRP_MODEL__VRP_MAX_REASONABLE=10.0  # Maximum reasonable VRP ratio

# Trading Configuration (VRP_TRADING__)
VRP_TRADING__BASE_POSITION_SIZE_PCT=0.02  # Base position size (2% of portfolio)
VRP_TRADING__MAX_POSITION_SIZE_PCT=0.05  # Maximum position size (5% of portfolio)
VRP_TRADING__EXTREME_LOW_CONFIDENCE_THRESHOLD=0.3  # BUY_VOL threshold (State 1)
VRP_TRADING__EXTREME_HIGH_CONFIDENCE_THRESHOLD=0.6  # SELL_VOL threshold (State 5)
VRP_TRADING__TRANSACTION_COST_BPS=10.0  # Transaction costs in basis points (0.10%)

# Data Configuration (VRP_DATA__)
VRP_DATA__MIN_DATA_YEARS=3  # Minimum years of data required
VRP_DATA__PREFERRED_DATA_YEARS=5  # Preferred years for optimal performance
VRP_DATA__MAX_MISSING_DAYS_PCT=0.02  # Maximum percentage of missing days (2%)
VRP_DATA__MAX_DAILY_PROCESSING_SECONDS=30  # Maximum processing time limit
VRP_DATA__MAX_MEMORY_USAGE_MB=500  # Maximum memory usage in MB

# Database Configuration (VRP_DATABASE__)
VRP_DATABASE__DATABASE_URL=sqlite:///vrp_model.db  # Database connection URL
VRP_DATABASE__DATABASE_PATH=vrp_model.db  # SQLite database file path
VRP_DATABASE__CONNECTION_TIMEOUT=30  # Connection timeout in seconds
VRP_DATABASE__CONNECTION_POOL_SIZE=5  # Database connection pool size
VRP_DATABASE__MAX_OVERFLOW=10  # Maximum connection pool overflow
VRP_DATABASE__ENABLE_WAL_MODE=true  # Enable SQLite WAL mode for concurrency
VRP_DATABASE__ENABLE_FOREIGN_KEYS=true  # Enable foreign key constraints
VRP_DATABASE__BACKUP_RETENTION_DAYS=7  # Days to retain database backups
VRP_DATABASE__AUTO_VACUUM=INCREMENTAL  # SQLite auto vacuum mode
VRP_DATABASE__REDIS_URL=redis://localhost:6379/0  # Redis cache connection

# Database Table Names (VRP_DATABASE__)
VRP_DATABASE__MARKET_DATA_TABLE=market_data
VRP_DATABASE__MODEL_STATE_TABLE=model_state
VRP_DATABASE__SIGNALS_TABLE=trading_signals
VRP_DATABASE__POSITIONS_TABLE=positions
VRP_DATABASE__SYSTEM_STATE_TABLE=system_state

# Logging Configuration (VRP_LOGGING__)
VRP_LOGGING__LOG_LEVEL=INFO  # Logging level (DEBUG, INFO, WARNING, ERROR)
VRP_LOGGING__LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
VRP_LOGGING__ENABLE_FILE_LOGGING=true  # Enable logging to file
VRP_LOGGING__LOG_FILE_PATH=logs/vrp_model.log  # Path to log file
VRP_LOGGING__MAX_LOG_FILE_MB=100  # Maximum log file size in MB
VRP_LOGGING__LOG_RETENTION_DAYS=30  # Days to retain log files

# External API Keys (if using live data sources)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
QUANDL_API_KEY=your_quandl_api_key_here

